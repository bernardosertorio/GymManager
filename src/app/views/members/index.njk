{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">

  <a href="/members/create">Novo membro</a>

  <table width="100%">

    <thead>
      <tr>
        <th>Membro</th>
        <th>E-mail</th>
        <th>Peso</th>
        <th>Altura</th>
        <th>Opções</th>
      </tr>
    </thead>

    <tbody>

      {% for member in members %}

      <tr>
        
        <td>
          <span 
            style="background-image: url({{member.avatar_url}})">
            {{member.name}}
        </td>
        <td>{{member.email}}</td>
        <td>{{member.weight}}kg</td>
        <td>{{member.height}}cm</td>
        <td><a href="/members/{{member.id}}">Ver</a></td>
      </tr>

      {% endfor %}

    </tbody>

  </table>  
  
</div>

{% endblock content %}
