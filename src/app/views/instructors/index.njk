{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">

  <a href="/instructors/create">Novo Instrutor</a>

  <table width="100%">

    <thead>
      <tr>
        <th>Instructor</th>
        <th>Services</th>
        <th>Options</>
      </tr>
    </thead>

    <tbody>

      {% for instructor in instructors %}

      <tr>
        
        <td>
          <span 
            style="background-image: url({{instructor.avatar_url}})">
            {{instructor.name}}
        </td>
        <td>{{instructor.services}}</td>
        <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
      </tr>

      {% endfor %}

    </tbody>

  </table>  
  
</div>

{% endblock content %}
